        <script>
            var obTimeOut; // clearTimeout() 함수를 이용하여 Timeout 을 취소하기위해 사용됨

            var ObjectArray = new Array ();
            ObjectArray[0] = "mainslide_01.jpg";
            ObjectArray[1] = "spon.jpg";
            ObjectArray[2] = "여행사진.webp";

            var nObjectCnt = 0;	

            let div = document.getElementsByClassName("mainSlide");

            function ShowDefaultRotate() // 스스로 자신을 호출하는 재귀함수 (Recursive Function)
            {
                if( nObjectCnt < ObjectArray.length )  // 배열의 갯수 이내일때만 실행
                {
                    var url = "url('" + "../public/" + ObjectArray[nObjectCnt] + "')";
                    div[0].style.backgroundImage = url;
                    nObjectCnt++;		 
                    obTimeOut = setTimeout("ShowDefaultRotate()",2000);  // 2초후에 자기자신을 호출 
                }
                else
                {
                    nObjectCnt = 0;
                    obTimeOut = setTimeout("ShowDefaultRotate()", 0);
                    // clearTimeout(obTimeOut); // 배열의 갯수만큼 반복하여 변환시킨 후에는 Timeout 을 중지시킨다 
                }
            }

            function startAnimation()
            {
                obTimeOut = window.setTimeout(ShowDefaultRotate,500); // 윈도우 로드 후 0.5초 후에 반복함수를 호출합니다.
            }

            window.onload = startAnimation; // 윈도우 로드시 이미지 변환함수 실행
        </script>

