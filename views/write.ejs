    <div style="padding:100px 50px 50px 50px;"  class="container" id="events">

        <!-- add an event form -->
        <div style="margin: 0 auto;" class="col-sm-6 col-sm-offset-3">
          <div class="panel panel-default">
      
            <div class="panel-heading">
              <h3>Add an Question</h3>
            </div>
            <form action="/add" method="POST">
            <div class="panel-body">
            
              <div class="form-group">
                <input class="form-control" placeholder="Question Title" v-model="event.name" name="title">
              </div>
      
              <div class="form-group">
                <textarea class="form-control" placeholder="Question Description" v-model="event.description" name="descript"></textarea>
              </div>
      
             
              <button class="btn btn-primary" v-on:click="addEvent">Submit</button>
            
            </div>
          </form> 
          </div>
        </div>



      

  
